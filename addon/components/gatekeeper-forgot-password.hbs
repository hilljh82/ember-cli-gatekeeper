<MdcForm class="gatekeeper-forgot-password" @submit={{this.submit}} @validity={{this.validity}}>
  <MdcTextfield @value={{this.email}} @label={{this.emailLabel}} required="true" />

  <MdcButton type="submit"
             @label={{this.submitButtonLabel}}
             @style={{@submitButtonStyle}}
             disabled={{this.submitButtonDisabled}} />
</MdcForm>