{{#mdc-form validity=(action (mut valid))}}
  {{mdc-textfield-with-helper-text class="gatekeeper-sign-in__username"
                                   value=username
                                   style=style
                                   required=true
                                   type=usernameType
                                   label=usernameLabel
                                   icon=usernameIcon
                                   iconPosition=usernameIconPosition
                                   iconClickable=usernameIconClickable
                                   iconClick=usernameIconClick
                                   autocapitalize="none"
                                   autocomplete=usernameAutoComplete
                                   helperText=usernameHelperText
                                   errorMessage=usernameErrorMessage}}

  {{mdc-password-textfield-with-helper-text class="gatekeeper-sign-in__password"
                                            value=password
                                            style=style
                                            required=true
                                            label=passwordLabel
                                            icon=passwordIcon
                                            autocomplete="off"
                                            autocapitalize="none"
                                            helperText=passwordHelperText
                                            errorMessage=passwordErrorMessage
                                            requirements=passwordRequirements
                                            valid=validPassword}}

  {{component recaptchaComponentName
              siteKey=siteKey
              verified=(action "verified")
              reset=reset
              execute=execute}}

  <div class="gatekeeper-sign-in__buttons">
    {{#mdc-button type="submit"
                  name="action"
                  value="signIn"
                  class="gatekeeper-sign-in__button--sign-in"
                  style=signInButtonStyle
                  click=(action "submit" "signIn")
                  disabled=signInDisabled}}
      {{signInButtonText}}
    {{/mdc-button}}

    {{#if showSignUpButton}}
      {{#mdc-button type="submit"
                    name="action"
                    value="signUp"
                    class="gatekeeper-sign-in__button--sign-up"
                    style=signUpButtonStyle
                    click=(action "submit" "signUp")
                    disabled=signUpDisabled}}
        {{signUpButtonText}}
      {{/mdc-button}}
    {{/if}}
  </div>

{{/mdc-form}}

{{mdc-snackbar message=errorMessage}}
