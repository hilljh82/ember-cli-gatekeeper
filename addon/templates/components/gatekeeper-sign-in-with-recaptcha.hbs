{{#mdc-form submit=(action "signIn") valid=(action (mut valid))}}
  {{mdc-textfield-with-helper-text class="gatekeeper-sign-in__username"
                                   value=username
                                   style=style
                                   required=true
                                   type=usernameType
                                   label=usernameLabel
                                   icon=usernameIcon
                                   iconPosition=usernameIconPosition
                                   iconClickable=usernameIconClickable
                                   iconClick=usernameIconClick
                                   autocapitalize="none"
                                   autocomplete=usernameAutoComplete
                                   helperText=usernameHelperText
                                   errorMessage=usernameErrorMessage}}

  {{mdc-password-textfield-with-helper-text class="gatekeeper-sign-in__password"
                                            value=password
                                            style=style
                                            required=true
                                            type=passwordType
                                            label=passwordLabel
                                            icon=passwordIcon
                                            iconPosition=passwordIconPosition
                                            iconClickable=enableShowPassword
                                            iconClick=(action "toggleShowPassword")
                                            autocomplete="off"
                                            autocapitalize="none"
                                            helperText=passwordHelperText
                                            errorMessage=passwordErrorMessage}}

  {{component componentName
              siteKey=siteKey
              verified=(action "verified")
              reset=reset
              execute=execute}}

  <div class="gatekeeper-sign-in__buttons">
    {{#mdc-button type="submit"
                  name="action"
                  value="signin"
                  class="gatekeeper-sign-in__button--sign-in"
                  style=signInButtonStyle disabled=disabled}}
      {{signInButtonText}}
    {{/mdc-button}}

    {{#if showSignUpButton}}
      {{#mdc-button type="submit"
                    name="action"
                    value="signup"
                    class="gatekeeper-sign-in__button--sign-up"
                    style=signUpButtonStyle click=signUpClick}}
        {{signUpButtonText}}
      {{/mdc-button}}
    {{/if}}
  </div>

{{/mdc-form}}

{{mdc-snackbar message=errorMessage}}
